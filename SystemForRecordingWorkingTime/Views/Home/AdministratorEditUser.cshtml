@model SystemForRecordingWorkingTime.Models.AdministratorEditUser

<div class="col-3">
    <form asp-action="EditUser">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Surname" class="control-label"></label>
            <input asp-for="Surname" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Patronymic" class="control-label"></label>
            <input asp-for="Patronymic" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Role" class="control-label"></label>
            <select asp-for="Role" asp-items="Html.GetEnumSelectList<UserRole>()" class="form-control"></select>
        </div>
        <div class="form-group">
            <label asp-for="Phone" class="control-label"></label>
            <input asp-for="Phone" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Edit" class="btn btn-primary" />
        </div>
    </form>
    <table>
        <tr>
            <td>Days worked</td>
            <td>@ViewBag.User.DaysWorked</td>
        </tr>
        <tr>
            <td>Unused vacation days</td>
            <td>@ViewBag.User.UnusedVacationDays</td>
        </tr>
        <tr>
            <td>All unused vacation days</td>
            <td>@ViewBag.User.AllUnusedVacationDays</td>
        </tr>
        <tr>
            <td>Days off</td>
            <td>@ViewBag.User.DaysOff</td>
        </tr>
        <tr>
            <td>Request count by status</td>
            <td>@(((SystemForRecordingWorkingTime.Models.User)ViewBag.User).RequestCountByStatus.Count)</td>
        </tr>
    </table>
</div>