@model IEnumerable<SystemForRecordingWorkingTime.Models.User>

@{
    ViewData["Title"] = "GeneralInformation";
}

<h1>GeneralInformation</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@if (Model == null)
    return;
<div class="row">
    <div class="col">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Surname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RoleValue)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleValue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditUser", new {id = item.Id})
                </td>
            </tr>
            }
        </tbody>
    </table>
    </div>
    @if (ViewBag.User != null)
    {
        Html.RenderPartial("UserDetails", (User)ViewBag.User);
    }
</div>